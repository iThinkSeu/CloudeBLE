<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ImageView
       android:id="@+id/mainImageView"
       android:layout_width="match_parent"
       android:layout_height="match_parent" 
       android:layout_weight="1"
       android:adjustViewBounds="true"
       />
     <!-- 搜索设备 -->
     <RelativeLayout 
        android:id="@+id/SearchLayout"
        android:layout_width="match_parent"
        android:layout_height="61dip"
        android:clickable="true"
        android:background="@drawable/home_select_list_style">
        
        <ImageView 
            android:id="@+id/home_img_looks"
            android:layout_width="31dip"
            android:layout_height="31dip"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dip"
            android:background="@drawable/index_search"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/home_img_looks"
            android:layout_marginLeft="5dip"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索设备"
                android:textSize="18dip"
                android:textColor="@android:color/secondary_text_light"
                android:textStyle="bold"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高压表设备搜索"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="14dip"/>
        </LinearLayout>
        <ImageView 
            android:layout_width="6dip"
            android:layout_height="12dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dip"
            android:layout_centerVertical="true"
            android:src="@drawable/home_index_arrow"/>
    </RelativeLayout>
    
    <!-- 测量显示 -->
    <RelativeLayout 
         android:id="@+id/MeasureLayout"
        android:layout_width="match_parent"
        android:layout_height="61dip"
        android:clickable="true"
        android:background="@drawable/home_select_list_style">
        <ImageView 
            android:id="@+id/home_img_shopping"
            android:layout_width="31dip"
            android:layout_height="31dip"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dip"
            android:background="@drawable/index_show"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/home_img_shopping"
            android:layout_marginLeft="5dip"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测量显示"
                android:textSize="18dip"
                android:textColor="@android:color/secondary_text_light"
                android:textStyle="bold"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实时测量结果"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="14dip"/>
        </LinearLayout>
        <ImageView 
            android:layout_width="6dip"
            android:layout_height="12dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dip"
            android:layout_centerVertical="true"
            android:src="@drawable/home_index_arrow"/>
    </RelativeLayout>
    
    <!-- 分选统计 -->
    
    <RelativeLayout 
        android:id="@+id/ChartLayout"
        android:layout_width="match_parent"
        android:layout_height="61dip"
        android:clickable="true"
        android:background="@drawable/home_select_list_style">
        <ImageView 
            android:id="@+id/home_img_show"
            android:layout_width="31dip"
            android:layout_height="31dip"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dip"
            android:background="@drawable/index_looks"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/home_img_show"
            android:layout_marginLeft="5dip"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分选统计"
                android:textSize="18dip"
                android:textColor="@android:color/secondary_text_light"
                android:textStyle="bold"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="统计分析结果"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="14dip"/>
        </LinearLayout>
        <ImageView 
            android:layout_width="6dip"
            android:layout_height="12dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dip"
            android:layout_centerVertical="true"
            android:src="@drawable/home_index_arrow"/>
    </RelativeLayout>
    
    <!-- 参数校正 -->
    <RelativeLayout 
        android:id="@+id/correctionLayout"
        android:layout_width="match_parent"
        android:layout_height="61dip"
        android:clickable="true"
        android:background="@drawable/home_select_list_style">
        <ImageView 
            android:id="@+id/home_img_correction"
            android:layout_width="31dip"
            android:layout_height="31dip"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dip"
            android:background="@drawable/index_browse"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/home_img_correction"
            android:layout_marginLeft="5dip"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参数校正"
                android:textSize="18dip"
                android:textColor="@android:color/secondary_text_light"
                android:textStyle="bold"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统参数校正"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="14dip"/>
        </LinearLayout>
        <ImageView 
            android:layout_width="6dip"
            android:layout_height="12dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dip"
            android:layout_centerVertical="true"
            android:src="@drawable/home_index_arrow"/>
    </RelativeLayout>
    
    <!-- 系统设置 -->
    <RelativeLayout 
        android:id="@+id/settingLayout"
        android:layout_width="match_parent"
        android:layout_height="61dip"
        android:clickable="true"
        android:background="@drawable/home_select_list_style">
        <ImageView 
            android:id="@+id/home_img_search"
            android:layout_width="31dip"
            android:layout_height="31dip"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dip"
            android:background="@drawable/index_browse"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/home_img_search"
            android:layout_marginLeft="5dip"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统设置"
                android:textSize="18dip"
                android:textColor="@android:color/secondary_text_light"
                android:textStyle="bold"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统参数设置"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="14dip"/>
        </LinearLayout>
        <ImageView 
            android:layout_width="6dip"
            android:layout_height="12dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dip"
            android:layout_centerVertical="true"
            android:src="@drawable/home_index_arrow"/>
    </RelativeLayout>

</LinearLayout>
