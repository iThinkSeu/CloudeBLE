<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="23dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:text="主页 MENU" />
    <TextView
        android:id="@+id/BLEsearch"
        android:clickable="true" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:textSize="40dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:text="未连接" />
    
    <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:orientation="horizontal">
	    <TextView
	        android:id = "@+id/BLEinfo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="12dp"
	        android:layout_gravity="center"
	        android:textColor="@color/white"
	        android:text="未连接仪器，点此搜索设备" />
	    <ImageView
	   		android:id="@+id/search"
	   		android:layout_margin="2dp"
	   		android:layout_width="12dp"
	   		android:layout_height="12dp" 
	   		android:src="@mipmap/search"/>
    </LinearLayout>
    <RelativeLayout 
    android:layout_marginBottom="110dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
     <ImageView
   		android:id="@+id/celiangxianshi"
   		android:layout_width="90dp"
   		android:layout_height="90dp" 
   		android:layout_centerInParent="true"
   		android:src="@mipmap/celiangxianshi"/>
     
     <ImageView
   		android:id="@+id/fenxuantongji"
   		android:layout_centerInParent="true"
		android:layout_above="@id/celiangxianshi"
   		android:layout_width="90dp"
   		android:layout_height="90dp" 
   		android:src="@mipmap/tongjitubiao"/>
     
     <ImageView
   		android:id="@+id/yunduandenglu"
   		android:layout_marginRight="5dp"
   		android:layout_toLeftOf="@id/celiangxianshi"
		android:layout_above="@id/celiangxianshi"
   		android:layout_width="90dp"
   		android:layout_height="90dp" 
   		android:src="@mipmap/yunduandenglu"/>
     <ImageView
   		android:id="@+id/canshujiaozheng"
   		android:layout_centerInParent="true"
		android:layout_below="@id/celiangxianshi"
   		android:layout_width="90dp"
   		android:layout_height="90dp" 
   		android:src="@mipmap/canshujiaozheng"/>
     <ImageView
   		android:id="@+id/xitongshezhi"
   		android:layout_marginLeft="5dp"
   		android:layout_toRightOf="@id/celiangxianshi"
		android:layout_below="@id/celiangxianshi"
   		android:layout_width="0dp"
   		android:layout_height="0dp" 
   		android:src="@mipmap/xitongshezhi"/>
   
</RelativeLayout>

 

</LinearLayout>
